{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++17",
				"${workspaceFolder}/source/*.cpp",
				"-g", "${workspaceFolder}/dependencies/glad/src/glad.c",
				"-I", "${workspaceFolder}/include",
				"-I", "${workspaceFolder}/dependencies/glm-0.9.9.8/glm",
				"-I", "${workspaceFolder}/dependencies/glad/include",
				"-I", "${workspaceFolder}/dependencies/SDL2-2.26.4/include",
				"-L", "${workspaceFolder}/dependencies/SDL2-2.26.4/lib",
				"-l", "mingw32",
				"-l", "SDL2main",
				"-l", "SDL2",
				"-o", "${workspaceFolder}/mario.exe",
			],
			"problemMatcher": ["$gcc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	]
}