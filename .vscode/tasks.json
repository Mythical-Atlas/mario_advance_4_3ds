{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/source/main.cpp",
				"-o",
				"${workspaceFolder}/mario.exe",
				"-std=c++17",
				"-I",
				"${workspaceFolder}/dependencies/glm-0.9.9.8/glm",
				"-I",
				"${workspaceFolder}/dependencies/glad/include",
				"-I",
				"${workspaceFolder}/dependencies/SDL2-2.26.2/include"
			],
			"problemMatcher": ["$gcc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	]
}